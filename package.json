{
  "name": "clientize",
  "version": "0.1.0",
  "private": true,
  "description": "Wraps an authenticated server REST API with a client REST API",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "build": "npm run build-copy && npm run build-templates && npm run build-js",
    "build-copy": "rm -f -r public && mkdir public && cp -R client/assets client/vendor client/*.html public",
    "build-templates": "/bin/zsh -c 'cp client/*/**/*.html public/templates' 2>/dev/null || true",
    "build-js": "mkdir -p public/assets/js && browserify client/app/app.js > public/assets/js/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hangarr/clientize"
  },
  "author": "Rick Hangartner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hangarr/clientize/issues"
  },
  "homepage": "https://github.com/hangarr/clientize",
  "engines": {
    "node": "^0.10.35",
    "npm": "^1.4.28"
  },
  "dependencies": {
    "angular": "^1.3.10",
    "angular-route": "^1.3.10",
    "async": "^0.9.0",
    "express": "^4.10.7",
    "hapi": "^8.1.0",
    "hapi-auth-basic": "^2.0.0",
    "hoek": "^2.11.0",
    "kew": "^0.5.0-alpha.1",
    "orchestrate": "^0.3.16",
    "request": "^2.51.0",
    "url": "^0.10.2"
  },
  "devDependencies": {
    "browserify": "^8.1.0",
    "orcup": "0.0.1"
  }
}
